<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="subreport_grupo_rubrica" pageWidth="555" pageHeight="802" columnWidth="555"
              leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">

    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="One Empty Record"/>

    <parameter name="SUBREPORT_RUBRICA" class="net.sf.jasperreports.engine.JasperReport"/>

    <queryString>
        <![CDATA[]]>
    </queryString>

    <field name="nomeGrupoRubrica" class="java.lang.String"/>
    <field name="totalEntradas" class="java.math.BigDecimal"/>
    <field name="totalSaidas" class="java.math.BigDecimal"/>
    <field name="rubricas" class="java.util.List"/>

    <detail>
        <band height="40" splitType="Stretch">
            <!-- Cabeçalho do Grupo -->
            <rectangle>
                <reportElement x="0" y="0" width="555" height="20" backcolor="#F5F5F5"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#CCCCCC"/>
                </graphicElement>
            </rectangle>
            <textField>
                <reportElement x="5" y="0" width="400" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{nomeGrupoRubrica}]]></textFieldExpression>
            </textField>
            <textField pattern="¤ #,##0.00">
                <reportElement x="450" y="0" width="100" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalEntradas}.doubleValue() > 0 ? $F{totalEntradas} : $F{totalSaidas}]]></textFieldExpression>
            </textField>

            <!-- Sub-relatório de Rubricas -->
            <subreport>
                <reportElement x="15" y="20" width="540" height="20"/>
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{rubricas})]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{SUBREPORT_RUBRICA}]]></subreportExpression>
            </subreport>
        </band>
    </detail>
</jasperReport>