<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="demonstrativo_financeiro_mensal_report" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="INSTITUICAO_NOME" class="java.lang.String"/>
    <parameter name="INSTITUICAO_ENDERECO" class="java.lang.String"/>
    <parameter name="INSTITUICAO_LOGO" class="java.io.InputStream"/>
    <parameter name="DATA_GERACAO" class="java.lang.String"/>
    <parameter name="MES" class="java.lang.Integer"/>
    <parameter name="ANO" class="java.lang.Integer"/>
    <parameter name="SALDO_PERIODO_ANTERIOR" class="java.math.BigDecimal"/>
    <parameter name="TOTAL_ENTRADAS" class="java.math.BigDecimal"/>
    <parameter name="TOTAL_SAIDAS" class="java.math.BigDecimal"/>
    <parameter name="SALDO_OPERACIONAL" class="java.math.BigDecimal"/>
    <parameter name="SALDO_FINAL_CAIXA_BANCO" class="java.math.BigDecimal"/>
    <parameter name="ENTRADAS_AGRUPADAS" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>
    <parameter name="SAIDAS_AGRUPADAS" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>
    <parameter name="RUBRICA_AGRUPADA_SUBREPORT" class="net.sf.jasperreports.engine.JasperReport"/>
    <parameter name="RUBRICA_DETALHE_SUBREPORT" class="net.sf.jasperreports.engine.JasperReport"/>

    <queryString>
        <![CDATA[]]>
    </queryString>

    <title>
        <band height="140" splitType="Stretch">
            <image>
                <reportElement x="0" y="0" width="100" height="100"/>
                <imageExpression><![CDATA[$P{INSTITUICAO_LOGO}]]></imageExpression>
            </image>
            <textField isStretchWithOverflow="true">
                <reportElement x="110" y="0" width="445" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{INSTITUICAO_NOME}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="110" y="30" width="445" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{INSTITUICAO_ENDERECO}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="70" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Demonstrativo Financeiro Mensal]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="100" width="555" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Período: " + $P{MES} + "/" + $P{ANO}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="200" splitType="Stretch">
            <!-- Saldo Período Anterior -->
            <staticText>
                <reportElement x="0" y="10" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Saldo do Período Anterior:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="10" width="355" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{SALDO_PERIODO_ANTERIOR}]]></textFieldExpression>
            </textField>

            <!-- Entradas -->
            <staticText>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[ENTRADAS]]></text>
            </staticText>
            <subreport>
                <reportElement x="0" y="60" width="555" height="1" positionType="Float" isRemoveLineWhenBlank="true"/>
                <subreportParameter name="RUBRICA_DETALHE_SUBREPORT">
                    <subreportParameterExpression><![CDATA[$P{RUBRICA_DETALHE_SUBREPORT}]]></subreportParameterExpression>
                </subreportParameter>
                <dataSourceExpression><![CDATA[$P{ENTRADAS_AGRUPADAS}]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{RUBRICA_AGRUPADA_SUBREPORT}]]></subreportExpression>
            </subreport>
            
            <!-- Total Geral Entradas (será posicionado dinamicamente pelo sub-relatório) -->
        </band>
        
        <!-- Band separada para Saídas -->
        <band height="100" splitType="Stretch">
            <!-- Saídas -->
            <staticText>
                <reportElement x="0" y="0" width="555" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[SAÍDAS]]></text>
            </staticText>
            <subreport>
                <reportElement x="0" y="20" width="555" height="1" positionType="Float" isRemoveLineWhenBlank="true"/>
                <subreportParameter name="RUBRICA_DETALHE_SUBREPORT">
                    <subreportParameterExpression><![CDATA[$P{RUBRICA_DETALHE_SUBREPORT}]]></subreportParameterExpression>
                </subreportParameter>
                <dataSourceExpression><![CDATA[$P{SAIDAS_AGRUPADAS}]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{RUBRICA_AGRUPADA_SUBREPORT}]]></subreportExpression>
            </subreport>
            
            <!-- Total Geral Saídas (será posicionado dinamicamente pelo sub-relatório) -->
        </band>
        <band height="10">
            <break>
                <reportElement x="0" y="0" width="555" height="1"/>
            </break>
        </band>
        <band height="10">
            <break>
                <reportElement x="0" y="0" width="555" height="1"/>
            </break>
        </band>
        
        <!-- Band separada para Resultado Operacional -->
        <band height="150" splitType="Stretch">
            <!-- Resultado Operacional -->
            <staticText>
                <reportElement x="0" y="0" width="555" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[Resultado Operacional]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="20" width="200" height="20"/>
                <text><![CDATA[Saldo do Período Anterior:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="20" width="355" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{SALDO_PERIODO_ANTERIOR}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="40" width="200" height="20"/>
                <text><![CDATA[Total de Entradas:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="40" width="355" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{TOTAL_ENTRADAS}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="60" width="200" height="20"/>
                <text><![CDATA[Total de Saídas:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="60" width="355" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{TOTAL_SAIDAS}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="80" width="200" height="20"/>
                <text><![CDATA[Saldo Operacional do Período:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="80" width="355" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{SALDO_OPERACIONAL}]]></textFieldExpression>
            </textField>

            <!-- Resultado Final em Caixa e Banco -->
            <staticText>
                <reportElement x="0" y="110" width="555" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[Resultado Final em Caixa e Banco]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="130" width="200" height="20"/>
                <text><![CDATA[Saldo Final Consolidado:]]></text>
            </staticText>
            <textField pattern="¤ #,##0.00">
                <reportElement x="200" y="130" width="355" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$P{SALDO_FINAL_CAIXA_BANCO}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="277" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA["Gerado em: " + $P{DATA_GERACAO}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="277" y="0" width="278" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
